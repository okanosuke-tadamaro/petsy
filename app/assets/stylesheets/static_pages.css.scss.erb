.home {
	position: absolute;
	height: 100%;
	width: 100%;
	background-image: url(asset_path('puppy_bg.jpg'));
	background-size: cover;
	.home-message {
		position: relative;
		text-align: center;
		color: white;
		text-transform: uppercase;
		text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.4);
		width: 600px;
		top: 50%;
		left: 50%;
    -ms-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    h1 {
    	font-size: 30px;
    	letter-spacing: 5px;
    	padding-bottom: 20px;
    }
	}
}